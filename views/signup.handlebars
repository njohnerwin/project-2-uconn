<div class="text">
    <div class="col-md-6 col-md-offset-3">
        <h2>Sign Up Form</h2>
        <br>
        <form class="signup">
            <div class="form-control">
                <div class="padding">
                    <span class="label yellow" for="exampleInputEmail1">Email address</span>
                    <input type="email" class="rounded yellow" id="email-input" placeholder="Email">
                </div>
            </div>
            <div class="form-control">
                <div class="padding">
                    <span class="label yellow" for="exampleInputPassword1">Password</span>
                    <input type="password" class="rounded yellow" id="password-input" placeholder="Password">
                </div>
            </div>
            <div class="form-control">
                <div class="padding">
                    <span class="label yellow" for="username-input">Username</span>
                    <input type="text" class="rounded yellow" id="username-input" placeholder="Username">
                </div>
            </div>
            <div class="form-control">
                <div class="padding">
                    <span class="label yellow" for="clss-input">Class</span>
                    <input type="text" class="rounded yellow" id="clss-input" placeholder="Class">
                </div>
            </div>
            <div class="form-control">
                <div class="padding">
                    <span class="label yellow" for="role-input">Role</span>
                    <input type="text" class="rounded yellow" id="role-input" placeholder="Role">
                </div>
            </div>
            <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span> <span class="msg"></span>
            </div>
            <br />
            <button type="submit" class="label green">Sign Up</button>
        </form>
        <br />
        <p>Or log in <a href="/">here</a></p>
    </div>


    <script type="text/javascript" src="js/navbar.js"></script>
    <script type="text/javascript" src="js/signup.js"></script>