<h1>Your Team!</h1>

<h2>Tanks</h2>

<ul>
    {{#each role}}
    {{#if Tank}}
    {{> ?/?-block Healer=false DPS=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Healers</h2>

<ul>
    {{#each role}}
    {{#if Healer}}
    {{> ?/?-block Tank=false DPS=false}}
    {{/if}}
    {{/each}}
</ul>

<H2>DPS</H2>
<ul>

    {{#each role}}
    {{#if DPS}}
    {{> ?/?-block Healer=false Tank=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Raid Member</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Raid Member:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="role">Role?</label><br>
        <input type="radio" name="Tank" value="1" checked> Tank<br>
        <input type="radio" name="DPS" value="1" checked> DPS<br>
        <input type="radio" name="Healer" value="1" checked> Healz<br>
    </div>

    <button type="submit">Add Raid Member</button>
</form>