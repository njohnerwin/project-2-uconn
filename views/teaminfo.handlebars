<div class="container1">
    <h1 id="team-identify" value="{{teamid}}">{{teamname}}</h1>

    <div class="container">
        <div class="column active">
            <div class="content">
                <h1>Tanks</h1>
                <div class="box">
                    <h2>Das Tanks</h2>
                    <br>
                    <div class="card" id="tank-list"></div>
                </div>



            </div>
            <div class="bg bg1"></div>
        </div>
        <div class="column">
            <div class="content">
                <h1>Healers</h1>
                <div class="box">
                    <h2>Healz</h2>
                    <br>
                    <div class="card" id="heal-list"></div>
                </div>


            </div>
            <div class="bg bg2"></div>
        </div>
        <div class="column">
            <div class="content">
                <h1>DPS</h1>
                <div class="box">
                    <h2>Boom Boom</h2>
                    <br>
                    <div class="card" id="dps-list"></div>
                </div>


            </div>
            <div class="bg bg3"></div>
        </div>
        <div class="column">
            <div class="content">
                <h1>Utility</h1>
                <div class="box ">
                    <h2>Utility</h2>
                    <br>
                    <br>
                    <div class="card" id="util-list"></div>
                </div>


            </div>
            <div class="bg bg4"></div>
        </div>
    </div>
    <h2>Raid Member</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="char-name">Character Name:</label>
            <input type="text" id="char-name" name="char-name">
        </div>

        <div class="form-group">
            <label for="char-class">Class:</label>
            <select id="char-class" name="char-class">
                <option>Warrior</option>
                <option>Hunter</option>
                <option>Priest</option>
                <option>Rogue</option>
                <option>Mage</option>
                <option>Warlock</option>
                <option>Druid</option>
                <option>Paladin</option>
                <option>Shaman</option>
                <option>Death Knight</option>
                <option>Monk</option>
                <option>Demon Hunter</option>
            </select>
        </div>

        <div class="form-group">
            <label for="char-role">Choose a role:</label>
            <select id="char-role" name="char-role">
                <option>DPS</option>
                <option>Tank</option>
                <option>Healer</option>
                <option>Utility</option>
            </select>
        </div>

        <button type="submit" id="add-member">Add</button>
    </form>

    <button>Save Changes</button>

    <a href="/teamlist">Back to Team List</a>;
</div>

<script type="text/javascript" src="/js/navbar.js"></script>
<script type="text/javascript" src="/js/teaminfo.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
    crossorigin="anonymous"></script>
<script>$(document).on('mouseover', '.container .column', function () { $(this).addClass('active').siblings().removeClass('active') })</script>
<script>$(document).on('mouseover', '.card-front', function () { $(this).addClass('card-back').siblings().removeClass('card-front') }).trigger('classChange')</script>